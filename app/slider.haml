<!DOCTYPE html>
%html
  %head
    +include 'app/shared/_head.haml'

  %body.theme-basic.style-sugar
    %script{src: 'scripts/bundle.js'}
    .application
      +include 'app/shared/_navbar.haml'

      .application-slider(application-slider)
        .application-slider__inner
          - for i in [1..5]
            .application-slider__slide
              %img{src: 'images/slidertest.jpg', alt: ''}

      .application-content
        .container-fluid
          .products__list(ks-products-container){data-total-pages: 10, data-current-page: 1, data-url: 'shared/_products.html'}
            .row(ks-products-list)
              +include 'app/shared/_products.haml'
            +include 'app/shared/_load_more.haml'

      .application-slider.application-slider_photos(application-slider)
        .application-slider__inner
          - for i in [1..8]
            .application-slider__slide
              %img{src: 'http://www.gold4u.ru/pictures/large/R00173.jpg', alt: ''}


      +include 'app/shared/_footer_sugar.haml'

      +include 'app/shared/_themeswitcher.haml'
